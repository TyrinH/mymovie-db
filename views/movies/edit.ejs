<% layout('layouts/boilerplate')%> 

   <div class="row">
       <div class="col-6 offset-3">
        <form action="/movies/<%=movie._id %>?_method=PUT" method=post novalidate class="validated-form">
            <label class="form-label"for="title">Movie title</label>
            <input class="form-control"type="text" name="title" placeholder="movie name" value="<%=movie.title%> " required>
            <label class="form-label"for="rating">movie rating</label>
            <input class="form-control"type="text" name="rating" placeholder="movie rating" value="<%=movie.rating  %> " required>
            <label class="form-label"for="release">movie release date</label>
            <input class="form-control"type="text" name="release" placeholder="movie release date" value="<%=movie.release  %> " required>
            <button class="btn btn-success mt-3">Update Movie</button>
        </form>
       </div>
   </div>
