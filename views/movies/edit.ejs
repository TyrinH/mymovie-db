<% layout('layouts/boilerplate')%> 

    <form action="/movies/<%=movie._id %>?_method=PUT" method=post>
        <label for="title">Movie title</label>
        <input type="text" name="title" placeholder="movie name" value="<%=movie.title%> ">
        <label for="rating">movie rating</label>
        <input type="text" name="rating" placeholder="movie rating" value="<%=movie.rating  %> ">
        <label for="release">movie release date</label>
        <input type="text" name="release" placeholder="movie release date" value="<%=movie.release  %> ">
        <button>Update Movie</button>
    </form>

    <a href="/movies">All movies</a>
