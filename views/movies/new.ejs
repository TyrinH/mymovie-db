<% layout('layouts/boilerplate')%> 

<h1 class="display-3 text-center">Add a new movie</h1>
   <div class="row">
       <div class="col-6 offset-3">
        <form action="/movies" method=post novalidate class="validated-form">
            <label class="form-label"for="title" >Movie title</label>
            <input class="form-control"type="text" name="title" placeholder="movie name" required>
            <label class="form-label"for="rating">movie rating</label>
            <input class="form-control"type="text" name="rating" placeholder="movie rating" required>
            <label class="form-label" for="release">movie release date</label>
            <input class="form-control"type="text" name="release" placeholder="movie release date" required>
            <button class="btn btn-success mt-3">submit</button>
        </form>
       </div>
   </div>
